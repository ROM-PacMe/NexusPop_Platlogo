<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    tools:context=".MainActivity" >

       
    <RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/lolliopl"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/lollipopbg"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lollipop_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/light"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/lollipopbg"
        android:layout_marginTop="31dp" />

    <ImageView
        android:id="@+id/lollilpopText"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lollipop_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/lollilpopText"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/lollipop_sticky"
            android:scaleType="fitCenter"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lollipopbg" />
    </RelativeLayout>

</RelativeLayout>
