<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  

    tools:context=".MainActivity" >

  <RelativeLayout
      android:id="@+id/lolliopl"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true" >

      <ImageView
          android:id="@+id/lollipopbg"
          android:layout_width="290dp"
          android:layout_height="290dp"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:scaleType="centerCrop"
          android:src="@drawable/lollipop_circle" />

       <ImageView
           android:id="@+id/light"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_alignTop="@+id/lollipopbg"
           android:layout_marginTop="21dp" />

    <ImageView
        android:id="@+id/lollilpopText"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_alignTop="@+id/light"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/lollipop_text" />

  </RelativeLayout>

</RelativeLayout>
